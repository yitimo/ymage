<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cutter.CutterEditActivity"
    android:fitsSystemWindows="true">
    <Button
        android:id="@+id/cutter_edit_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"/>
    <com.yitimo.ymage.cutter.YmageCutterView
        android:id="@+id/cutter_edit_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@id/cutter_edit_submit"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cutter_edit_rotate"
            style="?android:button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转"/>
        <Button
            android:id="@+id/cutter_edit_reset"
            style="?android:button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimenSpace"
            android:text="复位"/>
    </LinearLayout>
    <Button
        android:id="@+id/cutter_edit_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>